{
  "name": "conch-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for Conch Social with AI features",
  "main": "lib/index.js",
  "scripts": {
    "build": "node --max-old-space-size=8192 ./node_modules/typescript/bin/tsc --incremental",
    "build:watch": "node --max-old-space-size=8192 ./node_modules/typescript/bin/tsc --watch --incremental",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "ai": "^5.0.0",
    "@ai-sdk/openai": "^2.0.3",
    "openai": "^4.28.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.3"
  },
  "private": true
}

